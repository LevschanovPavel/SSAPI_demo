    <div class="stats_table--main" title='Total'>
      <a class='stats_dropdown-trigger' 
         data-target='HT_total_dropdown-match'>
         Total
      </a>
    </div>
    
    <div class="stats_table--basic" title='Total 1st Half'>
      <a class='stats_dropdown-trigger' 
         data-target='HT_total_dropdown-1stHalf'>
         <b class="show-on-small hide-on-med-and-up">1H</b>
         <b class="hide-on-small-only">1st Half</b>  
      </a>    
    </div>
    <div class="stats_table--basic" title='Total 2nd Half'>

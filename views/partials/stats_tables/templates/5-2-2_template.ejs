    <script>
      let statsHome_filter = document.querySelector("#home-tab .stats_table--filter"),
          statsAway_filter = document.querySelector("#away-tab .stats_table--filter"),
          statsH2H_filter = document.querySelector("#h2h-tab .stats_table--filter");

      const show_matches = (el)=>{
        const matches = el.parentElement.querySelectorAll(".matches_row")

        el.onclick = (e)=>{
          if (e.target.tagName !== "SPAN" && e.target.tagName !== "I") return false
          
          let select_team = el.getAttribute("team")
          
          Array.from(el.children).forEach(elem => elem.classList.remove(`press`));
          e.target.classList.add("press");

          if (e.target.classList[0] === "showOverall") {
            matches.forEach(el=>{
              el.style.display = 'contents'
            })
          }

          if (e.target.classList[0] === "showHome") {
            matches.forEach(el=>{
              el.style.display = 'contents'
              if (el.getAttribute("team")!==select_team) el.style.display = 'none'
            })
          }
      
          if (e.target.classList[0] === "showAway") {
            matches.forEach(el=>{
              el.style.display = 'contents'
              if (el.getAttribute("team")===select_team) el.style.display = 'none'
            })
        }
      }

      }

      show_matches(statsHome_filter)
      show_matches(statsAway_filter)
      show_matches(statsH2H_filter)
    </script>  